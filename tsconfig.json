{
  "compilerOptions": {
    "outDir": "./build/",
    "sourceMap": true,
    "noImplicitReturns": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es6",
    "removeComments": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "rootDir": "./src",
    "strict": true,
    "locale": "pt-BR",
    "newLine": "LF",
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "exclude": ["./node_modules", "./client", "./dist", "./build"],
  "include": ["./src/**/*"]
}
